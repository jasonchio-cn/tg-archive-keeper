# Telegram Bot Token (from @BotFather)
BOT_TOKEN=your_bot_token_here

# Your Telegram User ID (for tdl session)
USER_ID=your_user_id_here

# File size threshold (bytes, default 20MB)
FILE_SIZE_THRESHOLD=20971520

# Worker settings
MAX_ATTEMPTS=8
STALE_JOB_MINUTES=30

# Paths (container paths, don't change unless you know what you're doing)
DB_PATH=/data/task_db/app.db
TDL_SESSION_PATH=/data/tdl_session
LOG_PATH=/data/logs
FILES_PATH=/data/files
NOTES_PATH=/data/notes

# Storage mode: local, webdav, or both (comma-separated)
# Examples: "local", "webdav", "local,webdav"
STORAGE_MODE=local

# WebDAV settings (required if STORAGE_MODE includes webdav)
WEBDAV_URL=
WEBDAV_USERNAME=
WEBDAV_PASSWORD=
