# Telegram Bot Token (from @BotFather)
BOT_TOKEN=your_bot_token_here

# Download settings
MAX_CONCURRENT_DOWNLOADS=4

# Storage mode: local, webdav, or local,webdav (both)
STORAGE_MODE=local

# WebDAV settings (required if STORAGE_MODE includes webdav)
WEBDAV_URL=
WEBDAV_USERNAME=
WEBDAV_PASSWORD=

# Paths (container paths, don't change unless you know what you're doing)
DB_PATH=/data/task_db/app.db
LOG_PATH=/data/logs
FILES_PATH=/data/files
NOTES_PATH=/data/notes
